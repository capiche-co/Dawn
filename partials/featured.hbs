{{#get "posts" filter="featured:true+tags:-[changelog,docs]" limit="all" as |featured|}}
    {{#if featured}}
        <section class="featured-wrapper container">
            <h2 class="featured-title"></h2>
            <div class="featured-feed owl">
                {{#foreach featured visibility="all"}}
                    <article class="{{post_class}}">
                        {{#if feature_image}}
                            <div class="u-placeholder horizontal">
                                <img class="lazyload u-object-fit"
                                    data-srcset="{{> srcset}}" data-sizes="auto"
                                    src="{{img_url feature_image size="m"}}"
                                    srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                                    alt="{{title}}">
                            </div>
                        {{/if}}
                        <div class="single-meta">
                            {{date published_at format="MMMM DD, YYYY"}}
                        </div>
                        <h3 class="">{{title}}</h3>
                        <p class="single-excerpt" style="margin-top: -0.3em;">{{excerpt}}</p>
                        <a class="u-permalink" href={{url}}
                            aria-label="{{title}}"></a>
                    </article>
                {{/foreach}}
            </div>
        </section>
    {{/if}}
{{/get}}